<link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<% if @interview.errors.any? %>
	<% @interview.errors.each do |attribute, message| %>
		<%= message %><br> 
	<% end %>
<% end %>
<div style="text-align: center;">
	<div style="display: inline-block;">
			<%= form_for @interview, :html => {:class => 'form-horizontal'}  do |f|%>
				  <fieldset>
				    <div id="legend">
				      <legend class="">Create Interview</legend>
				    </div>
				    
				    <div class="control-group">
				      <label class="control-label"  for="Topic">Topic</label>
				      <div class="controls">
				        <%= f.text_field :topic, :class => "input-xlarge" %>
				      </div>
				    </div>

				    <div class="control-group">
				      <label class="control-label"  for="Role">Role</label>
				      <div class="controls">
				        <%= f.text_field :role, :class => "input-xlarge" %>
				      </div>
				    </div>

				    <div class="control-group">
				      <label class="control-label"  for="Schedule">Schedule Date and Time</label>
				      <div class="controls">
				        <%= f.datetime_field :schedule_at, :class => "input-xlarge" %>
				      </div>
				    </div>

				    <div class="control-group">
				      <label class="control-label"  for="Schedule">End Time</label>
				      <div class="controls">
				        <%= f.datetime_field :end_time, :class => "input-xlarge" %>
				      </div>
				    </div>

				    <div class="control-group">
				      <label class="control-label"  for="meet_link">Link for Meeting</label>
				      <div class="controls">
				        <%= f.text_field :meet_link, :class => "input-xlarge" %>
				      </div>
				    </div>

				    <div class="control-group">
				      <div class="controls">
				      	<%= f.submit "Create Now", :class => "btn btn-success" %>
				      </div>
				    </div>
				    
				  </fieldset>
			<% end %>
	</div>
</div>